<html>
<head>
	<title></title>
</head>
<body>

	<div class="row center-xs">

		<div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
			 <div class="box">

			 	<div class="white mdl-shadow--2dp top-space relative">

			 		<div id="user-cover" class="big-padding white-text text-left cover relative" style="background-image: url(<%= @user.cover.url(:medium)%>)" >

			 			<%=render "usuarios/menu_avatar"  %>
			 			<div class="top-space" id="user-avatar">
			 				<%=circle_img @user.avatar.url(:medium),100  %>
			 			</div>

			 		</div>

			 		<section class=" border-bottom top-space">
			 			<div class="row middle-xs">

			 				<div class="col-xs">
								 <div class="box">
								 	<h1 class="no-margin medium">
								 		<span> <%= best_in_place_if current_user== @user, @user, :name %></span>
								 		<span> <%= best_in_place_if current_user== @user, @user, :last_name %> </span>
								 		
								 		
								 	</h1>
								 	    	
								 </div>
							</div>


							<div class="col-xs-4 col-sm-2">
								 <div class="box">
								 	<% unless @are_friends %>
									 	<%=button_to friendships_path(friend_id: @user.id),method: :post, remote: true, :"data-type" => "script", class:"mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect" do %>

									 	<i class="material-icons"> person_add </i>
							 		
							 			<% end %> 
						 			<% end %> 
								 	    	
								 </div>
							</div>



			 			</div>
			 		</section>


			 		<div class="large-padding">
			 			<div class="row">

			 				<div class="col-xs">
								 <div class="box">
								 	seguidores
								 	    	
								 </div>
							</div>

							<div class="col-xs">
								 <div class="box">
								 	<%=@user.posts.count %>
								 	Posts
								 	    	
								 </div>
							</div>

			 			</div>


			 			<div class="row center-xs">

			 				<div class="col-xs-8 col-md-10">
								 <div class="box">
								 	<span> <%= best_in_place_if current_user== @user, @user, :bio %>  </span>
								 	
								 	    	
								 </div>
							</div>

			 			</div>


			 		</div>


			 		<div class="top-space">

			 			<%=form_for @user,remote: true  do |f| %>
			 			<div style="display:none;">
			 				<%=f.file_field :avatar,class:"remotipart" %>
			 				
			 			</div>
			 				
			 				
			 			<% end %> 


			 			<%=form_for @user, remote: true do |f| %>
			 			<div style="display:none;">
			 				
			 				<%=f.file_field :cover, class:"remotipart" %>
			 			</div>
			 				
			 				
			 			<% end %> 


			 		</div>



			 	</div>

			 	

			 	


					    	
			 </div>
		</div>

	</div>

</body>
</html>

